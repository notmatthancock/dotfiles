let mapleader=","

" The basic stuff.
syntax on
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent
set smartindent
set smarttab
set number
set mouse=a
set wildmode=longest,list,full
set wildmenu
set spelllang=en_us
set display=lastline " for long lines.

" Indicate the 80 column mark.
" set colorcolumn=80

" This is pretty annoying for small files,
" but useful for big ones with classes, etc.
" set foldmethod=indent
" set foldnestmax=2
